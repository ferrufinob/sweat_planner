<section class="hero is-dark ">
  <div class="hero-body">
    <div class= "container has-text-centered">
      <h1 class= "title">
        Sweat Planner
      </h1>
    </div>
  </div>
</section>
<!-- Nav Buttons -->
<div class="buttons is-centered">
  <button class="button is-light"><a href="/workouts/new">New Workout</a></button>
  <button class="button is-light"><a href="/users/<%=current_user.id%>/edit">Update Account</a></button>
  <button class="button is-light"><a href="/logout">Log out</a></button>
</div>
<!-- Workouts Show List -->
<div class="box">
  <%current_user.workouts.each do |t|%>
    <a href="/workouts/<%=t.id%>">
      <br>
      <div class="box">
        <h5 class="title is-6">
          <i class="fas fa-calendar-alt"></i>
          <%=t.date.strftime("%A, %B %d")%></br>
      </h5>
      <div class="has-text-right">
        <!-- DELETE FORM -->
        <form action="/workouts/<%=t.id%>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="DELETE">
        </form>
      </div>
      <h4 class="subtitle is-4 has-text-grey-dark">
        <%=t.target_area%></br>
    </h4>
  </div>
<%end%>
</div>
</div>
