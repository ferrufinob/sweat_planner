  <p class="title is-4">Activity Planned Today:</p>
  <div class="subtitle is-5 has-text-weight-semibold">
    <br />
    <div class="has-text-danger has-text-centered">
    Duration: <%= @workout.duration %>
  </div> <br>
    <%= @workout.activity_gsub %>
