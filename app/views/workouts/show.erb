<div class="box">
  <section class="hero is-dark">
    <div class="hero-body">
      <!-- Target Type and Date  Section-->
      <div class="container has-text-centered">
        <h4 class="title is-3">
          <%= @workout.target_area %>
        </h4>
        <p class="subtitle is-5">
          <%= @workout.date_format %>
        </p>
      </div>
    </div>
  </section>
  <br />
  <!-- Home and and Delete Navigation -->
  <div class="buttons is-centered">
    <button class="button is-outlined">
      <a href="/workouts/workouts">Home</a>
    </button>
    <button class="button is-outlined">
      <a href="/workouts/<%= @workout.id %>/edit">Edit</a>
    </button>
  </div>
</div>
<!-- Activity & Duration Section -->
