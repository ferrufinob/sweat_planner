<div class="box">
  <section class="hero is-dark">
    <div class="hero-body">
      <!-- Target Type and Date  Section-->
      <div class="container has-text-centered">
        <h4 class="title is-3">
          <%= @workout.target_area %>
        </h4>
        <p class="subtitle is-5">
          <%= @workout.date.strftime("%A, %B %d") %>
        </p>
      </div>
    </div>
  </section>
  <br />
  <!-- Home and and Delete Navigation -->
  <div class="buttons is-centered">
    <button class="button is-light">
      <a href="/workouts/workouts">Home</a>
    </button>
    <button class="button is-light">
      <a href="/workouts/<%= @workout.id %>/edit">Edit</a>
    </button>
  </div>
</div>
<!-- Activity & Duration Section -->
<div class="box has-text-centered">
  <p class="title is-4">Activity Planned Today:</p>
  <div class="subtitle is-5 has-text-weight-semibold">
    <br />
    <%= @workout.activity.gsub(URI.regexp, '<a href="\0">\0</a>' ).gsub(/\n/, "<br />" "<br />" ) %>
  </div>
  <div class="has-text-danger has-text-centered">
    Duration: <%= @workout.duration %>
  </div>
</div>