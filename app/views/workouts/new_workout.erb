<% if flash.has?(:notice)%>
  <%= flash[:notice] %>
<% end %>
<h2>Workout</h2>
<form action="/workouts" method="POST">
  <input type="date" name="workout[date]">
  <label for="target area">Target Area</label>
  <input type="text" name="workout[target_area]"><br>
  <textarea name="workout[activity]" cols="30" rows="10">Activity</textarea>
  <br>
  <label for="duration">Duration</label>
  <input type="text" name="workout[duration]">
  <input type="submit" value="submit">
</form>
<a href="/workouts">cancel</a>
