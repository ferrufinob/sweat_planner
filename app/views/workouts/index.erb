<section class="hero">
  <div class="hero-head has-background-danger has-text-centered has-text-weight-medium has-text-dark">
    <!-- Error Display -->
    <div class="container">
      <% if flash.has?(:notice) %>
        <%= flash[:notice] %>
          <% end %>
    </div>
  </div>
</section>
<section class="hero is-dark">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        Sweat Planner
      </h1>
    </div>
  </div>
</section>
<!-- Nav Buttons -->
<div class="buttons is-centered">
  <button class="button is-outlined"><a href="/workouts/new">New Workout</a></button>
  <button class="button is-outlined"><a href="/logout">Log out</a></button>
</div>
<!-- User Delete Form -->
<div class="buttons is-right">
  <form action="/users/<%= current_user.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE" />
    <input type="submit" class="button is-danger" value="DELETE ACCOUNT" />
  </form>
</div>
<!-- Workouts Show List -->
<div class="box">
  <p class="title is-4">Welcome, <%= current_user.name %>!</p>
  <% current_user.workouts.each do |workout| %>
    <a href="/workouts/<%= workout.id %>">
      <br>
      <div class="box">
        <h5 class="title is-6">
          <i class="fas fa-calendar-alt"></i>
          <%= workout.date_format %></br>
        </h5>
        <div class="has-text-right">
          <!-- DELETE FORM -->
          <form action="/workouts/<%= workout.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="button is-danger is-small is-outlined" value="DELETE">
          </form>
        </div>
        <h4 class="subtitle is-4 has-text-grey-dark">
          <%= workout.target_area %></br>
        </h4>
      </div>
      <% end %>
</div>
</div>

