<section class="hero">
  <div
    class="hero-head has-background-danger-light has-text-centered has-text-weight-medium has-text-danger"
  >
    <!-- Error Display -->
    <div class="container">
      <% if flash.has?(:notice)%> <%= flash[:notice]%> <%end%>
    </div>
  </div>
</section>
<!-- Edit Form -->
<form action="/users/<%=current_user.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH" />
  <!-- Name -->
  <div class="box">
    <div class="hero">
      <div class="hero-body">
        <div class="container has-text-centered">
          <h1 class="title is-3">Update Account</h1>
          <br />
          <div class="field">
            <label class="label">Name</label>
            <div class="control">
              <input type="text" name="user[name]" value="<%=current_user.name%>" />
</div>
</div>
<!-- Target Area  -->
<div class="field">
  <label class="label">Email</label>
  <div class="control">
    <input type="text" name="user[email]" value="<%=current_user.email%>" />
  </div>
</div>
<!-- Activity -->
<div class="field">
  <div class="control">
    <label class="label">Password</label>
    <input name="user[password]" /> <br />
    <br />
    <input
                type="submit"
                value="Update"
                class="button is-success is-light"
              />
      <button class="button is-danger is-light">
        <a href="/workouts">Cancel</a>
      </button>
    </div>
  </div>
</div>
</div>
</div>
</div>
</form>
<!-- User Delete Form -->
<div class="buttons is-right">
  <form action="/users/<%=current_user.id%>" method="POST">
    <input type="hidden" name="_method" value="DELETE" />
    <input
      type="submit"
      class="button is-danger"
      value="DELETE ACCOUNT"
    />
    </form>
  </div>
