<section class="hero">
  <div
    class="hero-head has-background-danger has-text-centered has-text-weight-medium has-text-dark"
  >
    <!-- Error Display -->
    <div class="container">
      <% if flash.has?(:notice) %> <%= flash[:notice] %> <% end %>
    </div>
  </div>
</section>
<!-- Log in Form -->
<div class="hero is-fullheight is-light">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-dark">LOGIN</h3>
        <hr class="login-hr" />
        <div class="title has-text-grey is-6">
          Please enter your email and password.
        </div>
        <!-- User Email -->
        <form action="/login" method="POST">
          <div class="field">
            <div class="control">
              <input
                class="input is-medium"
                type="email"
                name="user[email]"
                placeholder="Email"
              />
              </div>
            </div>
            <!-- User Password -->
            <div class="field">
              <div class="control">
                <input
                class="input is-medium"
                type="password"
                name="user[password]"
                placeholder="Password"
              />
                  <button
                class="button is-block is-dark is-medium is-fullwidth"
                type="submit"
              >
                    <!-- Sign up Navigation Link-->
                    Login
                  </button>
                  <p class="has-text-grey">
                    Don't Have an Account? <a href="/signup">Sign Up</a>
                  </p>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
